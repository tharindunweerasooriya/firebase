<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:id="@+id/RL_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp">


        <TextView
            android:id="@+id/cart_food_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Food Name:"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/cart_food_quantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/cart_food_name"
            android:text="Quantity:"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/cart_food_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_food_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Food Price: "
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

        <Button
            android:id="@+id/btn_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_food_price"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="17dp"
            android:layout_toEndOf="@+id/btn_remove_order"
            android:backgroundTint="#000000"
            android:padding="15dp"
            android:text="@string/Edit"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_remove_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_food_price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="171dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="#000000"
            android:padding="15dp"
            android:text="@string/remove"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>